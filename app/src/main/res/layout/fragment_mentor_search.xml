<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mainFragment.MentorSearchFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="75dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:background="@color/main_blue"
                android:orientation="vertical">

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mentor_fragment"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="28sp"
                android:textColor="@color/main_blue"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="관심분야"
                android:textColor="@color/light_blue"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/main_blue" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="상세분야"
                android:textColor="@color/light_blue"
                android:textStyle="bold" />
        </LinearLayout>
        <EditText
            android:id="@+id/editSpecifyField"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textSize="14sp"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/main_blue"
            android:hint="@string/edit_text_hint"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="제목"
                android:textColor="@color/light_blue"
                android:textStyle="bold" />
        </LinearLayout>
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="@color/main_blue"
            android:hint="@string/edit_text_hint2"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="질문"
                android:textColor="@color/light_blue"/>
        </LinearLayout>
        <EditText
            android:id="@+id/editContent"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/edit_text_blue"
            android:gravity="top"
            android:hint="@string/edit_text_hint3"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mentorSearchBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/round_button_background_blue"
                android:text="@string/search_mentor_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>